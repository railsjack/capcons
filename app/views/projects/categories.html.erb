<% provide(:title, 'Add project') %>
<% provide(:activemenu, 'list-projects')%>
<div class="alert alert-info">
  <strong>Project:</strong> <%= @project.name %>
</div>
<h3>Category List</h3>
<table class="table table-bordered table-striped table-condensed">
  <thead>
    <th>#</th>
    <th>Category Name</th>
  </thead>  
  <tbody>
    <% @categories.each_with_index do |cat,index|%>
      <tr>
        <td><%= index+1 %></td>
        <% if @report.present? %>
          <td><%= link_to cat.name, project_path(@project, {cat: cat.id, rep: @report.id})%></td>        
        <% else %>
          <td><%= link_to cat.name, checklist_project_path(@project, {cat: cat.id})%></td>
        <% end %>
        </tr>
    <% end %>   
  </tbody>  
</table> 
