:css
  #error_explanation h2{display: none;}
  #error_explanation ul{list-style: none; margin: 0; padding: 0; margin-bottom: 20px;}
%h3 Change your password
.relative.signin-container
  .row
    .col-sm-6.col-md-4.col-md-offset-4
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put,class: "form-signin" }) do |f|
        = devise_error_messages!
        = f.hidden_field :reset_password_token
        %div
          = f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", placeholder: 'New password'
        %p &nbsp;
        %div
          = f.password_field :password_confirmation, autocomplete: "off" , class: "form-control", placeholder: 'Confirm password'
        %p &nbsp;
        %div= f.submit "Change my password", class: "btn btn-primary" , style: "width:100%;"
