.relative.signin-container
  %p
    %img{:src => "/images/logo1.png"}/
  .welcome-message
    =t('Welcome to Capital Construction Company!')

  = form_for(resource, as: resource_name, url: session_path(resource_name),:html => {:class => "form-signin"} ) do |f|
    = f.text_field :username, class: "form-control vvv", placeholder: t('User name')
    = f.password_field :password, autocomplete: "off", class: "form-control", placeholder: t("Password")
    - if devise_mapping.rememberable?
      %label.checkbox.pull-left
        = f.check_box :remember_me
        = f.label :remember_me, t('Remember me')
      .pull-right.forgot-password
        - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
          = link_to t('Forgot your password?'), new_password_path(resource_name)
    .clearfix
    .center-block{style: 'width: 250px;'}
      = f.submit t('Sign in'), class: "btn btn-lg btn-primary btn-block"

  .signup-message
    = t("Don't have an account?")
  .center-block{style: 'width: 250px;'}
    - if devise_mapping.registerable? && controller_name != 'registrations'
      = link_to t('Sign up'), new_user_registration_path , class: "btn btn-block text-white btn-lg btn-signup border-white bg-transparent no-radius"
