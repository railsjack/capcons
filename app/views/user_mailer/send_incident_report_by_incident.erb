To view photo of issue: <br />
    <% @incidents_file.each do |iFile| %>
      <%= link_to "click here",  "http://#{TestApp::Application.config.action_mailer.default_url_options[:host]}#{iFile.file}", target: "_blank" %>
      <br />
    <% end %>
<% end %>
<br/><br/><br/>
